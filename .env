# ----------------------------
# SERVER CONFIGURATION
# ----------------------------
PORT=5001
NODE_ENV=development

# ----------------------------
# DATABASE
# ----------------------------
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/myapp
# (Or replace above line with your Atlas connection string if using cloud DB)

# ----------------------------
# JWT AUTH TOKENS
# ----------------------------
JWT_ACCESS_SECRET=your_32_character_random_string_here
JWT_REFRESH_SECRET=another_32_character_random_string_here
JWT_ACCESS_EXPIRY=30m
JWT_REFRESH_EXPIRY=7d

# ----------------------------
# GOOGLE OAUTH (OPTIONAL)
# ----------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# ----------------------------
# GITHUB OAUTH (OPTIONAL)
# ----------------------------
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5001/api/auth/github/callback

# ----------------------------
# FRONTEND CONNECTION
# ----------------------------
FRONTEND_URL=http://localhost:3000

# ----------------------------
# EMAIL SETTINGS (GMAIL)
# ----------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_16_digit_app_password

# ----------------------------
# AI SERVICES
# ----------------------------
# Grok (X.AI) - Your existing config
GROK_API_KEY=your_grok_api_key
GROK_API_URL=https://api.x.ai/v1/chat/completions

# OpenAI (For aiService.js - OPTIONAL)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (For aiService.js - OPTIONAL)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ----------------------------
# FILE UPLOAD CONFIG
# ----------------------------
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads/pdfs